<div class="navbar navbar-expand-sm navbar-plow">
  <%= link_to items_path do %>
    <div class="d-flex">
      <%= image_tag "plow-logo.png", class: "logo-plow" %>
      <h1>PLOW</h1>
    </div>
  <% end %>
  <ul class="navbar-nav">
    <li class="nav-item mr-5">
      <h2><%= link_to "Requests", bookings_path %></h2>
    </li>
    <li class="nav-item mr-5">
      <h2><%= link_to "Lease an Item", new_item_path %></h2>
    </li>
  </ul>
</div>
<div class="container d-flex items-space-around">
  <div class="grid">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col">
          <%= link_to item_path(item) do%>
            <div class="card-large">
              <img src="<%= cl_image_path item.photo.key, height: 200, width: 234, crop: :fill, class: "item-card-image" %>" alt="Plow item">
              <%= cl_image_tag(item.user.photo.key, class: "card-user avatar") %>
              <p class="card-item-category"><%= item.category %></p>
              <div class="card-textbox">
                <h2><%= item.title.capitalize %></h2>
                <div class="card-info">
                  <div>
                    <p>Size: <strong><%= item.size %></strong></p>
                    <p><%= item.condition %></p>
                  </div>
                  <div class="card-price">
                    <p>Price per day:</p>
                    <h3>Â¥<%= number_with_delimiter(item.price_per_day, delimter: "," ) %></h3>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container-map">
    <div id="map"
      style="width: 250px; height: 550px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
