<div class="navbar navbar-expand-sm navbar-plow">
  <%= link_to items_path do %>
    <div class="d-flex">
      <%= image_tag "plow-logo.png", class: "logo-plow" %>
      <h1>PLOW</h1>
    </div>
  <% end %>
  <ul class="navbar-nav">
    <li class="nav-item mr-5">
      <h2><%= link_to "Requests", bookings_path %></h2>
    </li>
    <li class="nav-item mr-5">
      <h2><%= link_to "Lease an Item", new_item_path %></h2>
    </li>
  </ul>
</div>
<!-- Testing search querys -->


<!-- Search by date -->
<div class="container">
  <%= form_tag root_path, method: :get, class: 'd-flex my-5' do %>
    <%= date_field_tag :start,
          params[:start],
          html5: true,
          class: "form-control"
        %>
    <%= date_field_tag :end,
          params[:end],
          html5: true,
          class: "form-control"
        %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<!-- Testing search querys -->
<!-- Search by date -->

<!-- Search by category -->
<div class="container d-flex">
  <div class="row mb-1">
    <%= form_tag root_path, method: :get do%>
      <% Item::CATEGORIES.each do |category| %>
        <div class="col-2">
          <%= submit_tag category, class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<!-- Search by category -->

<div class="container d-flex items-space-around">
  <div class="grid">
    <div class="row">
    <div class="col-12">
      <h3>Listing <%= @items.count %> items available</h3>
    </div>
      <% @items.each do |item| %>
        <%= render item %>
      <% end %>
    </div>
  </div>

  <div class="container-map">
    <div id="map"
      style="width: 250px; height: 550px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
