<div class="navbar navbar-expand-sm navbar-plow">
  <h1>PLOW</h1>
  <ul class="navbar-nav">
  <li class="nav-item mr-4"><h2><%= link_to "Listings", items_path %></h2></li>
  <li class="nav-item mr-4"><h2><%= link_to "My Rentals", bookings_path %></h2></li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card p-2 card-xl">
        <h2 class="text-center"><%= @item.title.capitalize %></h2>
        <p>Price per day:</p>
        <h4>Â¥<strong><%= number_with_delimiter(@item.price_per_day, :delimiter => ',') %></strong></h4>
        <div class="container d-flex justify-content-center">
          <%= cl_image_tag @item.photo.key, width: 430, height: 430, crop: :fill, class: 'img-fluid' %>
        </div>
        <p>Size: <strong><%= @item.size %></strong></p>
        <p>Description: <%= @item.description.capitalize %></p>
        <p>Condition: <strong><%= @item.condition %></strong></p>
      </div>
    </div>

    <div class="col-4">
      <%= simple_form_for [@item, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit class: 'button-frost' %>
      <% end %>
      <div id="map"
        style="width: 100%; height: 300px; border-radius: 3px; margin-top: 16px; box-shadow: 0 0 6px rgba(0,0,0,0.2);"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
