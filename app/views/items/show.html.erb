<div class="navbar navbar-expand-sm navbar-plow">
  <h1>PLOW</h1>
  <ul class="navbar-nav">
  <li class="nav-item mr-4"><h2><%= link_to "Listings", items_path %></h2></li>
  <li class="nav-item mr-4"><h2><%= link_to "My Rentals", bookings_path %></h2></li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card p-3">
        <h3 class="text-center"><%= @item.title.capitalize %></h3>
        <h3>Â¥<%= number_with_delimiter(@item.price_per_day, :delimiter => ',') %></h3>
        <div class="container d-flex justify-content-center">
          <%= cl_image_tag @item.photo.key, width: 450, height: 450, crop: :fill, class: 'img-fluid' %>
        </div>
        <p class="mt-3"><%= @item.description.capitalize %></p>
        <p>Owner: <%= @user.first_name %> <%= @user.last_name %></p>
        <p>Location: <%= @item.location %></p>
      </div>
    </div>

    <div class="col-4">
      <%= simple_form_for [@item, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit class: 'button-frost' %>
      <% end %>
    </div>
  </div>
</div>
